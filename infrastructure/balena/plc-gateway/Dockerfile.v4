FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    pycomm3 \
    pydantic

# Copy application
COPY app/ /app/

# Copy React dashboard (will be built separately)
# COPY static/ /app/static/

EXPOSE 5000

CMD ["uvicorn", "api_v4:app", "--host", "0.0.0.0", "--port", "5000"]
